<p id="notice"></p>

<div class="container">
    <div class="row">
        
        <%= render 'books/list', book: @book, user: current_user %>
        
        <div class="col-8">
            <h2>Users</h2>
            <table class="table">
                <thead>
                    <tr>    
                        <th scope="col">image</th>
                        <th scope="col">name</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |users| %>
                        <tr>
                            <th scope="row">
                                <% if users.profile_image.attached? %>
                                    <%= image_tag users.profile_image, size: "100x100" %>
                                <% else %>
                                    <%= image_tag 'default-image', size: "100x100" %>
                                <% end %>
                            </th>
                            <td><%= users.name %></td>
                            <td>
                                <%= link_to "Show", user_path(users.id) %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>