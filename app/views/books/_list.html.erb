<div class="col-md-3">
            <h2>User info</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <% if user.profile_image.attached? %>
                            <%= image_tag user.profile_image, size: "125x125" %>
                        <% else %>
                            <%= image_tag 'default-image', size: "125x125" %>
                        <% end %>
                    </tr>
                    <tr>
                        <th scope="row">name</th>
                        <th scope="row"><%= user.name %></th>
                    </tr>
                    <tr>
                        <th scope="row">introduction</th>
                        <th scope="row"><%= user.introduction %></th>
                    </tr>
                </tbody>
            </table>
            <%= link_to edit_user_path(user.id) do %>
                <button type="button" class="btn btn-outline-secondary btn-lg btn-block mt-2">
                <i class="fas fa-user-cog"></i>
                </button>
            <% end %>
            <div class="p-3">
                <h2>New book</h2>
                <%= form_with model: book do |f| %>
                    <div class="form-group">
                        <label>Title</label>
                        <%= f.text_field :title, class: "form-control" %>
                    </div>
                    <div class="form-group">
                        <label>Opinion</label>
                        <%=f.text_area :body, class: "form-control" %>
                    </div>
                    <%= f.submit "Create Book", class: "btn btn-success my-2" %>
                <% end %>
            </div>
        </div>