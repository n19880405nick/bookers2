<div class="container">
    <div class="row">
        <div class="col-6 pt-3 mx-auto">
            <h1><strong>User info</strong></h1>
            
            <div id="error_explanation">
                <% if @user.errors.any? %>
                    <% if @user.errors.count == 1 %>
                        <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
                    <% else %>
                        <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
                    <% end %>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                <% end %>
            </div>
            
            <%= form_with model: @user, method: :patch do |f| %>
                <div class="form-group">
                    <label>Name</label>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <label>Image</label><br>
                    <%=f.file_field :profile_image, accept: "image/*" %>
                </div>
                <div class="form-group">
                    <label>Introduction</label>
                    <%= f.text_area :introduction, class: "form-control" %>
                </div>
                <%= f.submit "Update User", class: "btn btn-secondary" %>
            <% end %>
        </div>
    </div>
</div>